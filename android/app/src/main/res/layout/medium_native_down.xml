<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Badge Ad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="17dp"
                    android:layout_height="13dp"
                    android:background="@layout/drawable_native_ad_text"
                    android:gravity="center"
                    android:text="Ad"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp" />
            </LinearLayout>

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <!-- App Icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ad_app_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp" />
                </LinearLayout>

                <!-- text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">
                    <!-- headline -->
                    <TextView
                        android:id="@+id/ad_headline"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontWeight="500"
                        android:maxLines="1"
                        android:text="Headline here"
                        android:textColor="#EFB502"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <!-- ad_advertise -->
                    <TextView
                        android:id="@+id/ad_body"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontWeight="400"
                        android:maxLines="2"
                        android:text="Ad advertise here"
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Spacer -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:orientation="vertical" />
            <!-- button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/ad_call_to_action"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginHorizontal="12.5dp"
                    android:background="@layout/drawable_native_ad_button"
                    android:gravity="center"
                    android:text="INSTALL"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Spacer -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:orientation="vertical" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.gms.ads.nativead.NativeAdView>